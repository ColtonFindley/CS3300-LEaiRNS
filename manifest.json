{
  "manifest_version": 3,
  "name": "YouTube Sidebar Extension",
  "version": "2.0",
  "description": "A sidebar extension that only works on YouTube. It extracts the timestamp of the video dynmaically",
  "permissions": ["sidePanel", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Toggle Sidebar"
  },
  "content_scripts": [
  {
    "matches": ["*://www.youtube.com/watch*"],
    "js": ["content.js"]
  }
]
}
