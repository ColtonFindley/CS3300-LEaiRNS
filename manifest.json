{
  "manifest_version": 3,
  "name": "YouTube Sidebar Extension",
  "version": "5.1",
  "description": "A sidebar extension that only works on YouTube. Implemented the Gemini API to send a hard coded message",
  "permissions": ["sidePanel", "scripting", "activeTab", "storage", "tabs", "webNavigation"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Toggle Sidebar"
  }
}
