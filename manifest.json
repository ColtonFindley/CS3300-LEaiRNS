{
  "manifest_version": 3,
  "name": "YouTube Sidebar Extension",
  "version": "3.0",
  "description": "A sidebar extension that only works on YouTube. It extracts the timestamp on the click of a button",
  "permissions": ["sidePanel", "scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Toggle Sidebar"
  },
  "content_scripts": [
  {
    "matches": ["*://*.youtube.com/watch*"],
    "js": ["content.js"]
  }
  ]
}
